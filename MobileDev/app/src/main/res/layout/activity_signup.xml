<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basquette"
    tools:context=".SignupActivity">


    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:text="Age"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ageTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:text="Gender"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/heightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ageTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:text="Height"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ageTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="227dp"
        android:text="Weight"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ageTitle"
        android:layout_centerVertical="true"
        android:text="Goals"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/genderTitle"
        android:layout_marginBottom="226dp"
        android:text="Exercise"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/allergiesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/heightTitle"
        android:layout_marginBottom="178dp"
        android:text="Allergies"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/restrictionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restrictions"
        android:layout_alignStart="@+id/heightTitle"
        android:text="Food Constraints"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ageTitle"
        android:layout_marginEnd="53dp"
        android:background="@drawable/textback"
        android:ems="10" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weightTitle"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/textback"
        android:ems="10" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/heightTitle"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/textback"
        android:ems="10" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age"
        android:layout_alignTop="@+id/genderTitle"
        android:background="@drawable/textback"
        android:ems="10" />

    <EditText
        android:id="@+id/goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age"
        android:layout_centerVertical="true"
        android:background="@drawable/textback"
        android:ems="10"
        android:hint="Weight Loss..." />

    <EditText
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exerciseTitle"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/textback"
        android:ems="10"
        android:hint="Light..." />

    <EditText
        android:id="@+id/allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/allergiesTitle"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/textback"
        android:ems="10"
        android:hint="Peanuts, Soy, ..." />

    <EditText
        android:id="@+id/restrictions"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/age"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="126dp"
        android:background="@drawable/textback"
        android:ems="10"
        android:hint="Vegetarian..." />

    <Button
        android:id="@+id/beginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/loginbutton"
        android:padding="10dp"
        android:text="Begin"
        android:textColor="#ffffff" />

</RelativeLayout>